<% layout('layouts/boilerplate')%>
  <div class="row">
    <h1 class="text-center">Edit</h1>
    <div class="col-6 offset-3">
      <form action="/studios/<%=studio._id%>?_method=PUT" method="POST" novalidate class="validated-form">
        <div class="mb-3">
          <label class="form-label" for="name">Title</label>
          <input class="form-control" type="text" id="name" name="studio[name]" required value="<%=studio.name %>">
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" id="location" name="studio[location]" required value="<%=studio.location %>">
        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Image Url</label>
          <input class="form-control" type="text" id="image" name="studio[image]" value="<%=studio.image %>" required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">RMB</span>
            <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
              aria-describedby="price-label" name="studio[price]" required value="<%=studio.price %>">
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" type="text" id="description"
            name="studio[description]" required><%= studio.description%></textarea>
        </div>
        <div class="mb-3">
          <button class="btn btn-info">Update studio info</button>
        </div>
      </form>
      <a href="/studios/<%= studio._id%>">Back to the studio info</a>

    </div>
  </div>
